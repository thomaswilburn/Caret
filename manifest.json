{
  "name": "Caret",
  "description": "Professional text editing for Chrome and Chrome OS",
  "version": "1.6.25",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "128": "icon-128.png"
  },
  "key": "MIGfMA0GCSqGSIb3DQEBAQUAA4GNADCBiQKBgQCh9A0p0K76KGXnEYMf4tVxhHUBXQTRh984XrkVSuzX6Tp4al9cj7NgXh3Sjx+0+KctLzpmvCw9bwgWueAE13LhjQ+dJONaR5xhte0KTAfaVRGV5EKCBx6KwzcaBGWBHv3V1b/8CbTENivW3/eVTg0/gmyB0tzfqzEoXy/lnRkZdQIDAQAB",
  "update_url": "http://thomaswilburn.net/caret/updates.xml",
  "app": {
    "background": {
      "scripts": [
        "background.js",
        "installer.js"
      ]
    }
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "notifications",
    "syncFileSystem",
    "app.window.fullscreen.overrideEsc",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    }
  ],
  "kiosk_enabled": false,
  "offline_enabled": true,
  "file_handlers": {
    "text": {
      "types": [
        "application/javascript",
        "application/json",
        "application/x-shellscript",
        "application/xml",
        "text/*"
      ]
    }
  }
}
